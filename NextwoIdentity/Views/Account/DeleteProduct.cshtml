@model Product
@{
    ViewData["Title"] = "DeleteProduct";
}

<h1>Delete Product</h1>

<form method="post" asp-action="DeleteProduct">
    @Html.HiddenFor(x=>x.ProductId);

    <p> Are you sure you want to delete this product? @Model.ProductName </p>

    <input type="submit" value="Yes" class="btn btn-warning" />


    <a asp-action="AllProducts" class="btn btn-success">No</a>
</form>

