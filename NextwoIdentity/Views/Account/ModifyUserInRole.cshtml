@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "ModifyUserInRole";
}

<h1>ModifyUserInRole</h1>

<form method="post" action="ModifyUserInRole">



    <div class="card">

        <div class="card-header">

            users in this role



        </div>

        <div class="card-body">

            @for(var i = 0; i < Model.Count; i++)
            {
                

                @Html.HiddenFor(m=>Model[i].UserId);
                @Html.HiddenFor(m=>Model[i].UserName);

                <input asp-for="@Model[i].IsSelected"/> @Model[i].UserName <br />
                


            }

        </div>

        <div class="card-footer">


            <input type="submit" value="save" class="btn btn-succcess" />
            <a asp-action="RolesList" class="btn btn-warning" >Cancel</a>
        </div>
    </div>

</form>
